
{{>header}}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                <li class="list-group-item"><a href="/campgrounds">Back</a></li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-responsive" src="{{campground.image}}" alt="">
                <div class="caption-full img-desc">
                    <h4><a href="#"><h1>{{campground.name}}</h1></a></h4>
                    <p>{{campground.description}}</p>
                    {{#if hideButtons}}
                    <div class="text-center">
                        <a href="#">Submitted by {{campground.author.username}}</a>
                    </div>
                    {{else}}
                    <div class="row">
                        <div class="col-md-6">
                            <a class="btn btn-warning btn-block" href="/campgrounds/{{campground._id}}/edit">Edit</a>
                        </div>
                        <div class="col-md-6">
                            <form action="/campgrounds/{{campground._id}}/?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" class="btn btn-danger btn-block text-bottom">
                            </form>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card bg-light mt-3 p-2">
                <div>
                    <a class="btn btn-success btn-block mb-4" href="/campgrounds/{{campground._id}}/comments/new">Add comment</a>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{#each campground.comments}}
                        <h6 class = "float-right">10 days ago</h6>
                        <h6><a href="#" class="">{{this.author.username}}</a></h6>
                        
                        <p>{{this.text}}</p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>footer}}